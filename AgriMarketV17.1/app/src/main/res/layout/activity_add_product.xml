<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFF"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/productImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/add_image_icon"
                />

            <ImageView
                android:id="@+id/voice"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/voice"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/productName"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                />


            <EditText
                android:id="@+id/edit_text_product_name"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/text_view_error_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:visibility="invisible"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                />


            <EditText
                android:id="@+id/edit_text_product_description"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/text_view_error_product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:visibility="invisible"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"

                />


            <EditText
                android:id="@+id/edit_text_price"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:hint="price by L.E"
                android:layout_marginTop="10dp"
                android:textSize="10sp"
                android:inputType="number"

                />

            <TextView
                android:id="@+id/text_view_error_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:visibility="invisible"
                />
            <Spinner
                android:id="@+id/priceUnitsSpinner"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                >

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/offer"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="@color/red"
                />


            <EditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:hint="optional"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColorHint="@color/colorPrimaryDark"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="@string/mobile"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                />


            <EditText
                android:id="@+id/edit_text_phone_number"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:inputType="number"
                />

            <TextView
                android:id="@+id/text_view_error_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:visibility="invisible"
                />
        </LinearLayout>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button"
            android:text="@string/save"
            />
    </LinearLayout>
</ScrollView>



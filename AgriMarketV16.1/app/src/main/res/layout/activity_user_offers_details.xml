<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="activities.OfferDetailsActivity">


    <TextView
        android:id="@+id/id_productName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textAlignment="center"
        android:text="Tomato"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/id_offer_image_view"
        android:layout_alignEnd="@+id/id_offer_image_view"
        android:layout_alignLeft="@+id/id_offer_image_view"
        android:layout_alignStart="@+id/id_offer_image_view" />

    <ImageView
        android:id="@+id/id_offer_image_view"
        android:layout_height="100dp"
        android:layout_width="120dp"
        android:layout_gravity="center"
        android:src="@drawable/product"
        android:layout_below="@+id/id_productName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/id_offer_description"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:text="This Product is very importatnt to us"
        android:layout_below="@+id/id_offer_image_view"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/id_offer_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.9dp"
            android:visibility="visible"
            android:background="#000000"
            android:layout_marginLeft="12dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:text="Price"
                />

            <TextView
                android:id="@+id/id_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="#000000"
                android:textSize="16dp"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="visible"
            android:background="#000000"
            android:layout_marginLeft="12dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:text="Quntity"
                />

            <TextView
                android:id="@+id/id_quntity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="#000000"
                android:textSize="16dp"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="visible"
            android:background="#000000"
            android:layout_marginLeft="12dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:text="Start Date"
                />

            <TextView
                android:id="@+id/id_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="#000000"
                android:textSize="16dp"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="visible"
            android:background="#000000"
            android:layout_marginLeft="12dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:text="Location"
                />

            <TextView
                android:id="@+id/id_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="#000000"
                android:textSize="16dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="visible"
            android:background="#000000"
            android:layout_marginLeft="12dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:text="Mobile"
                />

            <TextView
                android:id="@+id/id_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="#000000"
                android:textSize="16dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="visible"
            android:background="#000000"
            android:layout_marginLeft="12dp"
            />


    </LinearLayout>


    <Button
        android:id="@+id/okButton"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="OK"
        android:textSize="20dp"
        android:background="@drawable/round_button"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout" />



</RelativeLayout>
